<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="createQrDownload" class="com.dataservicesperu.kallpa.actions.CreateQrDownloadActionExecuter" parent="action-executer">
        <property name="serviceRegistry">
            <ref bean="ServiceRegistry" />
        </property>
    </bean>

    <!-- Servicio de Formulario -->
    <bean id="formularioService" class="com.dataservicesperu.kallpa.service.FormularioService">
        <property name="nodeService" ref="NodeService" />
        <property name="searchService" ref="SearchService" />
        <property name="siteService" ref="SiteService" />
        <property name="contentService" ref="ContentService" />
    </bean>

    <!-- WebScript GET -->
    <bean id="webscript.com.dataservicesperu.kallpa.formulario.get"
          class="com.dataservicesperu.kallpa.webscripts.FormularioWebScript"
          parent="webscript">
        <property name="formularioService" ref="formularioService" />
        <property name="authenticationService" ref="AuthenticationService" />
    </bean>

    <!-- WebScript POST -->
    <bean id="webscript.com.dataservicesperu.kallpa.formulario.post"
          class="com.dataservicesperu.kallpa.webscripts.FormularioWebScript"
          parent="webscript">
        <property name="formularioService" ref="formularioService" />
        <property name="authenticationService" ref="AuthenticationService" />
    </bean>
</beans>
